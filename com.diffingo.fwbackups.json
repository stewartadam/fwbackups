{
  "app-id": "com.diffingo.fwbackups",
  "runtime": "org.gnome.Platform",
  "runtime-version": "43",
  "sdk": "org.gnome.Sdk",
  "command": "fwbackups",
  "build-options": {
    "build-args": [
      "--share=network"
    ]
  },
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland",
    "--filesystem=host",
    "--share=network",
    "--socket=ssh-auth",
    "--talk-name=org.freedesktop.Flatpak",
    "--unset-env=LD_PRELOAD"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "fwbackups",
      "builddir": true,
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": ".",
          "branch": "HEAD"
        }
      ]
    },
    {
      "name": "python-deps",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --prefix=${FLATPAK_DEST} poetry",
        "${FLATPAK_DEST}/bin/poetry export --output=requirements.txt",
        "pip3 install --ignore-installed --prefix=${FLATPAK_DEST} -r requirements.txt"
      ],
      "sources": [
        {
          "type": "file",
          "path": "pyproject.toml"
        },
        {
          "type": "file",
          "path": "poetry.lock"
        }
      ]
    }
  ]
}